{% extends 'base.html.twig' %}

{% block title %}Voyage index{% endblock %}

{% block body %}
    <div class="d-flex justify-content-between">
    <h1 class="p-3">Voyage index</h1>
    <div>
    <a href="{{ path('app_voyage_user_voyages') }}" class="btn btn-light"> Mes voyages  </a>
    <a class="btn btn-outline-light"  href="{{ path('app_user_index') }}">Tous les utilisateurs</a>
    </div>
    </div>
    <table class="table">
        <thead class="text-center">
            <tr>
                <th>Id</th>
                <th>Nom</th>
                <th>Nombre de nuits</th>
                <th>Repas compris</th>
                <th>Prix total</th>
                <th>Transport inclus</th>
                <th>Date de d√©but</th>
                <th>Date de fin</th>
                <th>Localisation</th>
                <th>Voyage en</th>
                <th>Lien image</th>

                <th>actions</th>
            </tr>
        </thead>
        <tbody>
    
            {% for voyage in voyages %}
            <tr class="text-center">
                <td>{{ voyage.id }}</td>
                <td>{{ voyage.nom }}</td>
                <td>{{ voyage.nombreNuits }}</td>
                <td>{{ voyage.repasCompris ? 'Yes' : 'No' }}</td>
                <td>{{ voyage.prixTotal }}</td>
                <td>{{ voyage.transportADestinationInclus ? 'Yes' : 'No' }}</td>
                <td>{{ voyage.dateDebut ? voyage.dateDebut|date('Y-m-d') : '' }}</td>
                <td>{{ voyage.dateFin ? voyage.dateFin|date('Y-m-d') : '' }}</td>
                <td>{{ voyage.endroit.nom }}</td>
                <td>{{ voyage.modaliteTransport.nom }}</td>
                <td>{{ voyage.endroit.lienImage }}</td>


                <td class="d-flex">
                    
                    <a class="btn btn-outline-secondary m-1" href="{{ path('app_voyage_show', {'id': voyage.id}) }}">show</a>
                    <a class="btn btn-outline-primary m-1" href="{{ path('app_voyage_edit', {'id': voyage.id}) }}">edit</a>
            

                    </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="9">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
        </table>
        <div class="d-grid gap-2 d-md-flex justify-content-center">
        <a class="btn btn-success btn-lg"  href="{{ path('app_voyage_new') }}">Create new</a>
        </div>
        <div class="d-grid gap-2 d-md-flex justify-content-around">
            <a class="btn btn-outline-success"  href="{{ path('app_pays_index') }}">Pays disponibles</a>
            <a class="btn btn-outline-success"  href="{{ path('app_endroit_index') }}">Endroits disponibles</a>
            </div>
{% endblock %}
