{% extends 'base.html.twig' %}

{% block title %}Voyage{% endblock %}

{% block body %}
    <h1 class="p-3">Voyage</h1>

    <table class="table">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ voyage.id }}</td>
            </tr>
            <tr>
                <th>Nom</th>
                <td>{{ voyage.nom }}</td>
            </tr>
            <tr>
                <th>Nombre de nuits</th>
                <td>{{ voyage.nombreNuits }}</td>
            </tr>
            <tr>
                <th>Repas compris</th>
                <td>{{ voyage.repasCompris ? 'Yes' : 'No' }}</td>
            </tr>
            <tr>
                <th>Prix total</th>
                <td>{{ voyage.prixTotal }}</td>
            </tr>
            <tr>
                <th>Transport à destination inclus</th>
                <td>{{ voyage.transportADestinationInclus ? 'Yes' : 'No' }}</td>
            </tr>
            <tr>
                <th>Date de début</th>
                <td>{{ voyage.dateDebut ? voyage.dateDebut|date('Y-m-d') : '' }}</td>
            </tr>
            <tr>
                <th>Date de fin</th>
                <td>{{ voyage.dateFin ? voyage.dateFin|date('Y-m-d') : '' }}</td>
            </tr>
        </tbody>
    </table>

    <div class="d-flex d-flex justify-content-around">
    <a class="btn btn-outline-primary" href="{{ path('app_voyage_index') }}">Revenir à la liste des voyages</a>

    <a class="btn btn-outline-primary" href="{{ path('app_voyage_edit', {'id': voyage.id}) }}">edit</a>

    {{ include('voyage/_delete_form.html.twig') }}
    
    </div>
{% endblock %}
