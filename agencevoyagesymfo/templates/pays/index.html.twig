{% extends 'base.html.twig' %}

{% block title %}Pays index{% endblock %}

{% block body %}
    <h1 class="p-3">Liste des pays</h1>

    <table class="table">
        <thead>
            <tr>
                <th>Id</th>
                <th>Nom</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
        {% for pay in pays %}
            <tr>
                <td>{{ pay.id }}</td>
                <td>{{ pay.nom }}</td>
                <td>
                    <a class="btn btn-outline-secondary m-1" href="{{ path('app_pays_show', {'id': pay.id}) }}">show</a>
                    <a class="btn btn-outline-primary m-1" href="{{ path('app_pays_edit', {'id': pay.id}) }}">edit</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="3">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>
    <div class="d-grid gap-2 d-md-flex justify-content-center">
    <a class="btn btn-success btn-lg" href="{{ path('app_pays_new') }}">Ajouter un pays</a>
    </div>
{% endblock %}
